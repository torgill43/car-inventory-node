<!-- Title -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<!-- Error --> 
<% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
    <%  }) %>
    </ul>
    <% } %>

<!-- Message -->
<% if (message) { %>
    <p class="notice"><%= message %></p>
    <% } %>

<div id="delete-vehicle-cont">
    <!-- Indicate route, not file -->
    <form id="delete-vehicle-form" action="/inv/delete" method="post">
        <p>*Confirm Deletion - This cannot be undone.*</p>

        <label for="inv_make">Make</label>
        <input type="text" name="inv_make" id="inv_make" pattern="[A-Za-z0-9]{3,}" placeholder="Min 3 characters" required value="<%=locals.inv_make %>" readonly>

        <label for="inv_model">Model</label>
        <input type="text" name="inv_model" id="inv_model" pattern="[A-Za-z0-9]{3,}" placeholder="Min 3 characters" required value="<%=locals.inv_model %>" readonly>

        <label for="inv_year">Year</label>
        <input type="number" name="inv_year" id="inv_year" min="1886" placeholder="YYYY" required value="<%=locals.inv_year %>" readonly>

        <label for="inv_price">Price</label>
        <input type="number" name="inv_price" id="inv_price" min="0" required value="<%=locals.inv_price %>" readonly>

        <input id="delete-vehicle-submit" type="submit" value="Delete Vehicle">

        <input type="hidden" name="inv_id"
        <% if (locals.inv_id) { %> value="<%= locals.inv_id %>"
        <% } %>>
    </form>
</div>