<!-- Title -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<!-- Error -->
<% if (errors) { %>
    <p class="notice"><%= error %></p>
    <% } %>

<!-- Message -->
<% if (message) { %>
    <p class="notice"><%= message %></p>
    <% } %>

<div class="manage-cont">
    <a href="./add-class">Add new classification</a>
    <a href="./add-vehicle">Add new vehicle</a>
</div>

<div class="manage-inv-cont">
    <h2>Manage Vehicles</h2>
    <p>Select a classification...</p>

    <%- dropdown %>
    <table id="inventoryDisplay"></table>
</div>
