<!-- Title -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<!-- Error --> 
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<!-- Message -->
<% if (message) { %>
    <p class="notice"><%= message %></p>
<% } %>

<% if (!locals.clientAuthorized)  {%>
  <h1 class="acctWelcome">Welcome, <%= locals.clientData.client_firstname %></h1>
  <p>You're logged in!</p>
<% } else if (locals.clientAuthorized)  {%>
  <h2 class="acctWelcome">Welcome, <%= locals.clientData.client_firstname %></h2>
  <div class="invLinkCont">
  <h3>Inventory Management</h3>
  <p><a class="linkToInv" href="/inv/">View Options</a></p>
  </div>
<% } %> 
